//-
    name: main-menu
    description: Markup for the main menu block.
    arguments:
        - {array} props - Block properties.
        - {string} props.items[].title - Item title.
        - {string} props.items[].url - Item URL.
        - {array} props.items[].submenu - Item submenu.
        - {string} props.items[].submenu[].title - Submenu item title.
        - {string} props.items[].submenu[].url - Submenu item URL.

mixin main-menu(props)
    nav.main-menu&attributes(attributes)
        ul.main-menu__list
            each item, i in props.items
                li.main-menu__item
                    if item.submenu
                        a(
                            href=item.url
                            aria-haspopup="true"
                            aria-expanded="false"
                        ).main-menu__link= item.title
                            span.main-menu__arrow(aria-hidden="true")
                                i.zmdi.zmdi-chevron-down
                        .main-menu__submenu
                            ul.main-menu__sub-list
                                each subitem in item.submenu
                                    li.main-menu__sub-item
                                        a(
                                            href=subitem.url
                                        ).main-menu__sub-link= subitem.title
                        // .main-menu__submenu 
                    else
                        a(href=item.url).main-menu__link= item.title
                // .main-menu__item 
    // .main-menu 
