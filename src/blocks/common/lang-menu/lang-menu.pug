//-
    name: lang-menu
    description: Markup for the lang-menu block
    arguments:
        - {object} data - block data

mixin lang-menu(data = {})
    .lang-menu&attributes(attributes)
        button(
            aria-haspopup="true"
            aria-expanded="fase"
            aria-controls="lang-menu"
        ).lang-menu__trigger
            i.zmdi.zmdi-globe-alt

        .lang-menu__drop
            ul.lang-menu__list
                li.lang-menu__item
                    a(href="javascript:void(0);").lang-menu__link
                        | English (EN)
                li.lang-menu__item
                    a(href="javascript:void(0);" lang="de").lang-menu__link
                        | Deutsch (DE)
                li.lang-menu__item
                    a(href="javascript:void(0);" lang="fr").lang-menu__link
                        | Fran√ßais (FR)
